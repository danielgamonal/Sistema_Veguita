body
 background-color #f5f6fa
 font-size 14px;
 font-family: 'Roboto', sans-serif;

h2,h3,h4,h5,ul,body,html
 padding 0px
 margin 0px

.mptop16
    margin-top 16px

.wrapper
    min-height 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width 17%
    .col2
        float left
        width 83%

.sidebar
    background-color #ffffff
    min-height 100vh
    .section-top
        background-color #009a8a
        box-shadow 0 0.5rem 1rem rgba(0,0,0 0.15)
    .logo
        display block
        margin 0px auto
        padding-top 24px
        width 60%
    .user
        color #ffffff !important
        padding 16px
        a
         color #ffffff
         font-size: 1.2em
    .main
        margin-top 8px
        ul
           li
              margin-bottom 4px
              a
               color #8998ac
               display block
               font-size 1.1em
               padding 12px 16px
               i
                 margin-right 10px
               &:hover
                   background-color #009a8a
                   box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
                   color #ffffff
                   text-decoration none
.navbar
    background-color #009a8a
    a
     color #fff
.page
    padding-top 16px
    padding-bottom 16px
    .breadcrumb
        background-color #fff
        box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.10)
        .breadcrumb-item
            a
              &:hover
                  text-decoration none
    .panel
        background-color #fff
        border-radius 6px
        border-bottom 2px solid #2caaff
        width 100%
        .header
            border-bottom 1px solid #e8e8e8
            h2.title
             display inline-block
             color #19213d
             font-size 1.1em
             padding 12px 16px
        .inside
            padding 16px
            .nav
                .nav-link
                    border 1px solid #009a8a
                    margin-right 8px
                    &:hover
                        background-color #009a8a
                        color #fff
.opts
    a
     border-radius 4px
     border 1px solid #dedede
     display inline-block
     padding 8px 12px

.product_gallery
    overflow hidden
    .btn-submit
          width 100%
          display block
          margin-right 1%
          a
           border 1px dashed #6666
           display block
           text-align center
           font-size 1.5em
           padding 12px
           border-radius 4px
           color #333
           &:hover
               background-color #009a8a
               color #fff
    .thumbs
        overflow hidden
        .thumb
            margin-top 16px
            float left
            position relative
            width 48%
            a
               background-color rgba(0,0,0, .5)
               border-radius 50%
               display inline-block
               color #fff
               padding 6px 10px
               position absolute
               bottom 8px
               right 8px
            img 
               border-radius 4px
               width 100%
               &:nth-child(odd)
                   margin-right 4%
.page_user
    .mini_profile
        .avatar
            display block
            margin 0px auto
            border-radius 50%
            width 150px
        .info
            background-color #fff
            span
                display block
                font-size 1.2em
                width 100%
            span.title
                font-weight bold
                margin-top 16px
        .btn
            margin-top 16px
            width 100%